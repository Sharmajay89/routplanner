<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
   android:background="#ffffff"
    android:layout_height="wrap_content">


        <ImageView
            android:layout_width="@dimen/step_imageview_height"
            android:layout_height="@dimen/step_imageview_height"
            android:id="@+id/image"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:background="@drawable/driveicon"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="@dimen/route_detail_via_leftmargin"
            android:textSize="@dimen/normal_text_size"
            android:paddingRight="5dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:text="Via"
            android:textStyle="bold"
            android:id="@+id/textview_via"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_via"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="@dimen/route_detail_via_leftmargin"
        android:paddingRight="5dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:id="@+id/textview_distance"
        android:textSize="@dimen/normal_text_size"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/view"
        android:layout_below="@+id/textview_distance"
           android:layout_marginTop="3dp"
        android:background="@color/colorPrimary"
        >

    </View>


    </RelativeLayout>

